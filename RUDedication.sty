\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{RUDedication}[2022/12/27 Dedication package for Rutgers CBE Thesis]

\newcommand{\dedication}[1]{%
\cleardoublepage
\phantomsection
\addcontentsline{toc}{chapter}{Dedication}
\begin{center}
	\Large \MakeUppercase{Dedication}
\end{center}
\vfill
\begin{flushright}
\parbox{0.5\linewidth}{\raggedleft\textit{#1}}
\end{flushright}
\vfill
\newpage
}

\newenvironment{acknowledgments}{%
\cleardoublepage
\phantomsection
\addcontentsline{toc}{chapter}{Acknowledgments}
\begin{center}
{\Large \MakeUppercase{acknowledgments}}
\end{center}}{\newpage}